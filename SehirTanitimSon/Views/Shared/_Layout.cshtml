<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Şehir Tanıtım</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f7fb;
        }

        .navbar-custom {
            background-color: #0a2647;
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav-link {
                color: #ffffff !important;
                font-weight: 500;
            }

                .navbar-custom .nav-link:hover {
                    color: #89cff0 !important;
                }

        footer {
            font-size: 0.9rem;
            color: #999;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-custom shadow-sm">
        <div class="container">
            @Html.ActionLink("Şehir Tanıtım", "Index", "Home", null, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">@Html.ActionLink("Ana Sayfa", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Nüfus", "Index", "Nufus", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("İlçeler", "Index", "Ilce", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Turistik Yerler", "Index", "TuristikYer", null, new { @class = "nav-link" })</li>
                </ul>

                @using Microsoft.AspNet.Identity
                <ul class="navbar-nav">
                    @if (Request.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <span class="nav-link text-light">Hoş geldin @User.Identity.GetUserName()</span>
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Çıkış", "Logout", "Account", null, new { @class = "nav-link" })
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">@Html.ActionLink("Giriş", "Login", "Account", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Kayıt Ol", "Register", "Account", null, new { @class = "nav-link" })</li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content mt-3">
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year - Şehir Tanıtım Projesi</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
