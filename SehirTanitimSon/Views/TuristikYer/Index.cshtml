@model List<SehirTanitimSon.Models.TuristikYer>

@{
    ViewBag.Title = "Turistik Yerler";
}

<h2 class="fw-bold mb-4">İstanbul'un Turistik Yerleri</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Yeni Yer Ekle", "Ekle", null, new { @class = "btn btn-outline-success mb-3 shadow-sm" })
    </p>
}

@if (Model != null && Model.Count > 0)
{
    <ul style="list-style-type: disc; padding-left: 20px;">
        @foreach (var yer in Model.Take(6))
        {
            <li class="mb-5">
                <span class="fw-bold text-dark fs-5">@yer.Ad</span>

                <div class="d-flex flex-wrap mt-2 align-items-start gap-3">
                    @if (!string.IsNullOrEmpty(yer.ResimUrl))
                    {
                        <img src="@yer.ResimUrl"
                             alt="@yer.Ad"
                             class="img-thumbnail shadow-sm"
                             style="max-width: 320px; max-height: 200px;" />
                    }

                    <div style="flex: 1; min-width: 250px;">
                        @if (!string.IsNullOrEmpty(yer.Aciklama))
                        {
                            <p class="text-secondary fst-italic">@yer.Aciklama</p>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <div class="mt-2">
                                @Html.ActionLink("Düzenle", "Duzenle", new { id = yer.Id }, new { @class = "btn btn-sm btn-outline-primary me-2" })
                                @Html.ActionLink("Sil", "Sil", new { id = yer.Id }, new { @class = "btn btn-sm btn-outline-danger", onclick = "return confirm('Silmek istediğinize emin misiniz?');" })
                            </div>
                        }
                    </div>
                </div>
            </li>
        }
    </ul>
}
else
{
    <p class="text-muted">Henüz turistik yer eklenmemiş.</p>
}
